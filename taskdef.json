{
    "family": "hello-world",
    "containerDefinitions": [
        {
            "image": "%REPOSITORY_URI%:v_%BUILD_NUMBER%",
            "name": "hello-world",
            "cpu": 10,
            "memory": 256,
            "essential": true,
			"mountPoints": [
              {
                 "readOnly": null,
                 "containerPath": "/opt",
                 "sourceVolume": "my"
              }
            ],
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
			"volumes": [
                {
                    "name": "my",
                    "host": {
                    "sourcePath": "/mnt"
                },
               "dockerVolumeConfiguration": null
            }
         ]
        }
    ]
}
