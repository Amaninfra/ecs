{
    "family": "test",
    "containerDefinitions": [
        {
            "image": "122160613195.dkr.ecr.us-east-2.amazonaws.com/test:latest",
            "name": "test",
            "cpu": 10,
            "memory": 256,
            "essential": true,
	    "mountPoints": [{
                  "sourceVolume": "webdata",
                  "containerPath": "/root/www",
                  "readOnly": false
              }],
             "volumes": [{
              "name": "webdata",
              "host": {
                      "sourcePath": "/opt"
              }}
         ],
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ]
        }
    ]
}
