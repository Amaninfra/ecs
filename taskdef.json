{
      "family": "test",
      "containerDefinitions": [
      {
              "name": "test",
              "image": "122160613195.dkr.ecr.us-east-2.amazonaws.com/test:latest",
              "cpu": 99,
              "memory": 100,
              "portMappings": [{
                      "containerPort": 80,
                      "hostPort": 80
              }],
              "essential": true,
              "mountPoints": [
              {
              "sourceVolume": "my",
               "containerPath": "/root/www",
              "readOnly": false
              },
              "volumes": [
             {
                "host": {
                "sourcePath": "/opt"
             },
              "name": "my"
            }
      }
      ]
}
