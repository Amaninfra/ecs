{
    "family": "hello-world",
    "volumes": [
    {
      "name": "webdata2",
      "host": {
        "sourcePath": "/opt"
      }
    }
   }
  ],
   "containerDefinitions": [
        {
            "image": "%REPOSITORY_URI%:v_%BUILD_NUMBER%",
            "name": "hello-world",
            "cpu": 10,
            "memory": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
	    "mountPoints": [
                {
                  "sourceVolume": "webdata2",
                  "containerPath": "/mnt"
                }
      ]
        }
    ]
}
